{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "baseUrl": ".",
    "paths": {
      "@shared/*": ["shared/*"],
      "@client/*": ["client/src/*"],
      "@server/*": ["server/*"]
    }
  },
  "include": ["client", "server", "shared"]
}
